{% extends 'base.html.twig' %}

{% block body %}
<article>
	<h1>Ajouter une langue</h1>
	{{ form_start(form) }}
	<table class="nice">
		<tr><th>Langue</th><td>{{ form_widget(form.language) }}</td></tr>
		<tr><th>Variante</th><td>{{ form_widget(form.dialect) }}</td></tr>
		<tr><th>Lieu d’acquisition</th><td>{{ form_widget(form.country, { 'attr': {'class': 'country'} }) }}{{ form_widget(form.town) }}</td></tr>
		<tr><th>Profil-type</th><td>{{ form_widget(form.profileType) }}</td></tr>
		<tr><th>Description</th><td>{{ form_widget(form.description) }}</td></tr>
		<tr><th colspan="2"><input type="submit" value="Créer la langue"/></th>
	</table>
	{{ form_end(form) }}
</article>
{% endblock %}

