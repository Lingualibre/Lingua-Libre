{% extends 'base.html.twig' %}

{% block body %}
<article>
	<h1>Créer une langue :</h1>

	{{ form_start(form) }}
	<table class="nice">
		<tr><th>Titre</th><td>{{ form_widget(form.title) }}</td></tr>
		<tr><th>Code</th><td>{{ form_widget(form.code) }}</td></tr>
		<tr><th>Description</th><td>{{ form_widget(form.description) }}</td></tr>
		<tr><th>Is Right To Left</th><td>{{ form_widget(form.isRtl) }}</td></tr>
		<tr><th colspan="2">{{ form_widget(form.save) }}</th></tr>
	</table>
	{{ form_end(form) }}
</article>
{% endblock %}

